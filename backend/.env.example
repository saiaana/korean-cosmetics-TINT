# Database Configuration
# Для локальной разработки используйте локальную PostgreSQL или Supabase
# Формат DATABASE_URL: postgresql://username:password@host:port/database

# Вариант 1: Локальная PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/korean_cosmetics

# Вариант 2: Supabase (для разработки)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Вариант 3: Render или другая облачная БД
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Server Configuration
PORT=4000

# Firebase Admin SDK
# Скопируйте содержимое JSON файла сервисного аккаунта Firebase
# и вставьте его как одну строку (без переносов)
# Или используйте путь к файлу (если файл находится в backend/config/)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Cloudinary (опционально, для загрузки изображений)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
